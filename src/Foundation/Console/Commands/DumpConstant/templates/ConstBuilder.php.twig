<?php

namespace Fifa2018;

class Constants {

    private static $storage = [];

    public static function get($name) {

        if (!array_key_exists($name, self::$storage)) {
            return null;
        }

        return self::$storage[$name];

    }

    public static function register($constName, $value) {

        self::$storage[$constName] = $value;

    }


}

